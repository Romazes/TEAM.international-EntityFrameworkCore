@model Model.Flower
@{
    ViewData["Title"] = "Edit";
}

<h1>Change existing Flower</h1>
<form asp-action="Edit" method="post" class="mt-4 mb-4">
    @Html.Hidden("Id", Model.Id)
    <div class="form-group mt-4">
        <h6>Name</h6>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group mt-4">
        <h6>Latin Name</h6>
        <input asp-for="LatinName" class="form-control" placeholder="Latin Name"/>
    </div>
    <button type="submit" class="btn btn-primary mt-5">
        Change Flower
    </button>
</form>
